{
  "name": "contoso-api",
  "version": "1.0.0",
  "description": "Backend API for university management system",
  "main": "index.ts",
  "scripts": {
    "start": "ts-node -r dotenv/config index.ts",
    "dev": "nodemon -r dotenv/config index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "db:seed": "ts-node -r dotenv/config src/db/seed.ts"
  },
  "dependencies": {
    "@babel/preset-env": "^7.26.9",
    "@faker-js/faker": "^9.5.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "drizzle-orm": "^0.27.0",
    "express": "^4.18.2",
    "helmet": "^8.0.0",
    "pg": "^8.10.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.26.0",
    "@types/chai": "^5.0.1",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.16.3",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "@types/tape": "^5.8.1",
    "ava": "^6.2.0",
    "chai": "^5.2.0",
    "drizzle-kit": "^0.19.3",
    "jest": "^29.5.0",
    "mocha": "^11.1.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "tape": "^5.9.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
