{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest",
      "express"
    ]
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}